<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:paddingRight="20dp"
    android:paddingLeft="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:text="Logo Apps" 
            android:gravity="center_horizontal"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>
        
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:src="@drawable/gambar_satu"
            android:layout_centerHorizontal="true"
            android:id="@+id/img_materi"
            android:layout_marginTop="50dp"
            android:background="#FFFFFF"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:src="@drawable/gambar_dua"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:id="@+id/img_latihan"
            android:background="#FFFFFF"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:src="@drawable/gambar_tiga"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:id="@+id/img_ujian"
            android:background="#FFFFFF"/>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="50dp">
            
            <ImageView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_public_black_24dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:layout_marginRight="10dp"
                android:id="@+id/img_peringkat"
                />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_mood_black_24dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:id="@+id/img_kredit"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_exit_to_app_black_24dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:layout_marginLeft="10dp"
                android:id="@+id/img_keluar"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>